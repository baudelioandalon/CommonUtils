<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="label" format="string" />

    <declare-styleable name="AKTextField">
        <attr name="label" />
        <attr name="android:inputType" />
        <attr name="android:textColor" />
        <attr name="endIconDrawable" />
        <attr name="endIconMode" />
        <attr name="android:maxLength" />
    </declare-styleable>

    <declare-styleable name="AKAutocomplete">
        <attr name="label" />
        <attr name="android:inputType" />
        <attr name="android:textColor" />
        <attr name="endIconDrawable" />
        <attr name="endIconMode" />
    </declare-styleable>

    <declare-styleable name="AKToolbar">
        <attr name="android:title" />
    </declare-styleable>

    <declare-styleable name="flowBottomNavigation">
        <attr name="cu_defaultIconColor" format="color" />
        <attr name="cu_selectedIconColor" format="color" />
        <attr name="cu_backgroundBottomColor" format="color" />
        <attr name="cu_circleColor" format="color" />
        <attr name="cu_countTextColor" format="color" />
        <attr name="cu_countBackgroundColor" format="color" />
        <attr name="cu_countTypeface" format="string" />
        <attr name="cu_rippleColor" format="color" />
        <attr name="cu_shadowColor" format="color" />
        <attr name="cu_hasAnimation" format="boolean" />
        <attr name="cu_heightCell" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CUShadowLayout">
        <attr name="sl_shadowed" format="boolean"/>
        <attr name="sl_shadow_distance" format="dimension"/>
        <attr name="sl_shadow_angle" format="integer"/>
        <attr name="sl_shadow_radius" format="dimension"/>
        <attr name="sl_shadow_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="RoundableLayout">
        <attr name="cornerLeftTop" format="dimension" />
        <attr name="cornerRightTop" format="dimension" />
        <attr name="cornerLeftBottom" format="dimension" />
        <attr name="cornerRightBottom" format="dimension" />
        <attr name="backgroundColor" format="color" />
        <attr name="strokeLineWidth" format="dimension" />
        <attr name="strokeLineColor" format="color" />
        <attr name="dashLineWidth" format="dimension" />
        <attr name="dashLineGap" format="dimension" />

        <attr name="cornerLeftSide" format="dimension" />
        <attr name="cornerRightSide" format="dimension" />

        <attr name="cornerAll" format="dimension" />
    </declare-styleable>

</resources>